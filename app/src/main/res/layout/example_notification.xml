<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_example_notification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_lemon_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_example_notification"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_example_notification_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:clickable="true" />

            <TextView
                android:id="@+id/txt_example_notification_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="long message"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>